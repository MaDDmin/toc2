<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <ListPreference
      app:key="appearance"
      app:title="Appearance"
      android:entries="@array/appearanceList"
      android:entryValues="@array/appearanceValues"
        android:dialogTitle="Appearance"
        android:defaultValue="auto"
    />

    <!--app:isPreferenceVisible="false"-->

    <EditTextPreference
        app:key="minimumspeed"
        app:title="Minimum speed"
        app:defaultValue="20"
        />


    <EditTextPreference
        app:key="maximumspeed"
        app:title="Maximum speed"
        app:defaultValue="250"
        />

    <CheckBoxPreference
        app:key="setdefault"
        app:title="Reset all settings"
        app:defaultValue="false"
        />
</androidx.preference.PreferenceScreen>