<?xml version="1.0" encoding="utf-8"?>
<androidx.preference.PreferenceScreen
     xmlns:app="http://schemas.android.com/apk/res-auto">


    <SwitchPreferenceCompat
        app:key="manualtheme"
        app:title="Manual theme setting"
        />

    <SwitchPreferenceCompat
        app:key="darktheme"
        app:title="Use dark theme"
        app:dependency="manualtheme"

        />
    <!--app:isPreferenceVisible="false"-->

    <EditTextPreference
        app:key="minimumspeed"
        app:title="Minimum speed"
        app:defaultValue="20"
        />


    <EditTextPreference
        app:key="maximumspeed"
        app:title="Maximum speed"
        app:defaultValue="250"
        />

    <CheckBoxPreference
        app:key="setdefault"
        app:title="Reset all settings"
        app:defaultValue="false"
        />
</androidx.preference.PreferenceScreen>